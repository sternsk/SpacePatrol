{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", 
    
    "outDir": "./",
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    
    
    "forceConsistentCasingInFileNames": true,
    
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "es5", "es6", "scripthost"]
  },
  "include": [
    "./"
    
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
